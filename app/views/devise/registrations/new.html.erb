<div class="row">

  <div class="center-block well" style="max-width: 400px">
    <h2><%= t('page.devise.sign_up') %></h2>

    <%= devise_error_messages! %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="form-group">
          <%= f.label :email %><br/>
          <%= f.email_field :email, autofocus: true, class: 'form-control', required: true %>
        </div>

        <div class="form-group">
          <%= f.label :password %><br/>
          <%= f.password_field :password, autocomplete: "off", class: 'form-control', required: true %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %><br/>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', required: true %>
        </div>

        <div class="form-group">
          <%= f.submit "Sign Up", class: 'btn btn-default' %>

          <div class="pull-right">
            <%= link_to t('page.devise.back_to_sign_in'), new_user_session_path, class: 'btn btn-default' %>
          </div>

        </div>

        <hr>

        <h4><%= t('page.devise.oauth_signup') %></h4>

        <%= link_to user_google_oauth2_omniauth_authorize_path do %>
            <%= image_tag 'google.png', style: 'width: 40px' %>
        <% end %>

    <% end %>
  </div>

</div>