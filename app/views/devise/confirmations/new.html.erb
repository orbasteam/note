<div class="row">

  <div class="center-block well" style="max-width: 400px">
    <h2><%= t('page.devise.resend_confirmation') %></h2>

    <%= devise_error_messages! %>

    <%= form_for(resource, as: resource_name, method: :post, url: confirmation_path(resource_name)) do |f| %>

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email',
                            value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
        </div>

        <div class="form-group">
          <%= f.submit t('page.devise.resend_confirmation'), class: 'btn btn-primary' %>

          <div class="pull-right">
            <%= link_to t('page.devise.back_to_sign_in'), new_user_session_path, class: 'btn btn-default' %>
          </div>

        </div>

        <hr>

    <% end %>
  </div>

</div>